<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_temp_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="攝氏溫度:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edittext_input_c"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="請輸入攝氏溫度值"
        android:inputType="numberDecimal"
        android:text=""
        app:layout_constraintBaseline_toBottomOf="@id/textview_temp_c"
        app:layout_constraintStart_toEndOf="@id/textview_temp_c" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_ctoF"
        android:text="溫度轉換"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/textview_temp_c"
        app:layout_constraintStart_toStartOf="@id/textview_temp_c" />




</androidx.constraintlayout.widget.ConstraintLayout>